{
  "name": "xplane-bridge",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "APP_ENV=development tsx watch src/index.ts",
    "cockpit:dev": "cd web-cockpit && npm run dev",
    "bundle": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --external:serialport --external:node:* --banner:js=\"import { createRequire as _createRequire } from 'node:module'; const require = _createRequire(import.meta.url);\"",
    "start": "node dist/index.js",
    "build:cockpit": "cd web-cockpit && npm run build",
    "dist:all": "npm run build:cockpit && npm run bundle"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "serialport": "^13.0.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.27.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
